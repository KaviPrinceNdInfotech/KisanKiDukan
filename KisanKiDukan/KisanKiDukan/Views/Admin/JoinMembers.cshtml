@model KisanKiDukan.Models.ViewModels.JoinMemberModelListAdmin
@{
    ViewBag.Title = "JoinMembers";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    .row {
        margin-top: 1%;
    }
</style>

@*<h2>JoinMembers</h2>*@
<div style="width:100%;overflow-x:scroll">
    <h4>Refferal User</h4>
    @using (Html.BeginForm())
    {
        <div class="row">
            <div class="col-md-4">
                <input name="term" placeholder="Search by name/email/phone" class="form-control" />
            </div>
            <div class="col-md-2">
                <input type="submit" value="Search" class="btn btn-info" />
                <a href="/Admin/JoinMembers" class="btn btn-primary">All</a>
            </div>
       </div>
        <hr />
    }
    @if (Model.Member.Count() > 0)
    {
        <div class="row">
            <div class="col-md-12">
                <table class="table table-striped table-bordered">
                    <tr>
                        <th>User ID</th>
                        <td>Name</td>
                        <th>Phone</th>
                        <th>Email Id</th>
                        <th>Address</th>
                        <th>Wallet Amount</th>
                        <th>Total Member</th>
                        <th>Action</th>
                    </tr>
                    @foreach (var item in Model.Member)
                    {
                        <tr>
                            <td>@item.User_Id</td>
                            <td>@item.FullName</td>
                            <td>@item.Phone</td>
                            <td>@item.Email_Id</td>
                            <td>@item.Address</td>
                            <td><i class="fa fa-inr" aria-hidden="true"></i>&nbsp;@item.Wallet_Amount</td>
                            <td>@item.Total_Member</td>
                            <td><a href="/Admin/MemberDetail?id=@item.User_Id" class="btn btn-info">View Member</a></td>
                        </tr>
                    }
                </table>
                <ul class="pagination">
                    @for (int i = 1; i <= Model.NumberOfPages; i++)
                    {
                        if (Model.Page == i)
                        {
                            <li class="active"><a href="/Admin/JoinMembers?page=@i">@i</a></li>
                        }
                        else
                        {
                            <li><a href="/Admin/JoinMembers?page=@i">@i</a></li>
                        }
                    }
                </ul>
            </div>
        </div>
    }
    else
    {
        <h4>No records found</h4>
    }
</div>


