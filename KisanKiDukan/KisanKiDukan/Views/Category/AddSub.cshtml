@model KisanKiDukan.Models.ViewModels.CategoryModel
@{
    ViewBag.Title = "AddSub";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>AddSub</h2>*@
@using (Html.BeginForm("AddSub", "Category", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    <div style="width:50%">
        <h4>Sub Categories</h4>
        <div class="form-group">
            Main Category * @Html.DropDownListFor(a => a.Id, Model.CategoryList, new { @class = "form-control", required = "required" })
            <span style="color:red">@Html.ValidationMessageFor(a => a.Id)</span>
        </div>
        <div class="form-group">
            Sub Category * @Html.TextBoxFor(a => a.CategoryName, new { @class = "form-control", required = "required" })
            <span style="color:red">@Html.ValidationMessageFor(a => a.CategoryName)</span>
        </div>
        <div class="form-group">
            Image
            @Html.TextBoxFor(a => a.ImageFile, new { type = "file", required = "required" })
        </div>
        @*<div class="form-group">
                Up To.*
                @Html.TextBoxFor(a => a.UpToText, new { @class = "form-control", required = "required" })
            </div>*@
        <div class="form-group">
            @if (TempData["msg"] != null)
            {
                <span style="color:red;">@TempData["msg"]</span>
            }
        </div>

        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-info" />
            <a class="btn btn-info" href="/Category/SubCategories">Show All</a>
        </div>

    </div>
}
