@model KisanKiDukan.Models.ViewModels.CustomerDTO
@{
    ViewBag.Title = "UserRegister";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}
@*<h1>UserRegister</h1>*@

<!-- breadcrumb start -->
<div class="breadcrumb-main ">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="breadcrumb-contain">
                    <div>
                        <h2>User Register</h2>
                        <ul>
                            <li><a href="/Home/Index">home</a></li>
                            <li><i class="fa fa-angle-double-right"></i></li>
                            <li><a href="#">User Register</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- breadcrumb End -->

<!-- section start -->
<section class="section-big-py-space bg-light">
    <div class="custom-container">
        <div class="checkout-page contact-page">
            <div class="checkout-form">
                @using (Html.BeginForm("UserRegister", "Home", FormMethod.Post, new { id = "customer-form", @class = "js-customer-form" }))
                {
                    <div class="container">
                        <div>
                            <div class="checkout-title">
                                <h3></h3></div>
                            <div class="theme-form">
                                <div class="row check-out ">
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        Your Name *
                                        @Html.TextBoxFor(a => a.FullName, new { placeholder = "Your Name", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.FullName)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        Mobile Number *
                                        @Html.TextBoxFor(a => a.Phone, new { placeholder = "Mobile Number", @type = "number", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.Phone)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        Email Address *
                                        @Html.TextBoxFor(a => a.Email_Id, new { placeholder = "Email Id", @type = "email", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.Email_Id)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        Password *
                                        @Html.TextBoxFor(a => a.Password, new { placeholder = "Password", @type = "password", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.Password)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        Confirm Password *
                                        @Html.TextBoxFor(a => a.ConfirmPassword, new { placeholder = "Confirm Password", @type = "password", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.ConfirmPassword)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        Address *
                                        @Html.TextBoxFor(a => a.Address, new { placeholder = "Address", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.Address)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        State *
                                        @Html.TextBoxFor(a => a.State, new { placeholder = "State", @type = "text", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.State)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        City *
                                        @Html.TextBoxFor(a => a.City, new { placeholder = "City", @type = "text", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.City)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-12 col-sm-12 col-xs-12">
                                        Pincode *
                                        @Html.TextBoxFor(a => a.Pincode, new { placeholder = "Pincode", @type = "number", @required = "required", @class = "" })
                                        <span class="text-danger">
                                            @Html.ValidationMessageFor(a => a.Pincode)
                                        </span>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <a href="/Home/login">Already have an account</a>
                                    </div>
                                    <div class="form-group col-md-6 col-sm-6 col-xs-12">
                                        <button type="submit" name="nextBtn" class="text-right" value="Next" style="border:none;">
                                            <span class="btn-normal btn">Submit</span>
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>
<!-- section end -->
