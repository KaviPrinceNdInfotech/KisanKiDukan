@{
    Layout = null;
}

<!DOCTYPE HTML>
<html>
<head>
    <title>Organic Deal</title>
    <link rel="shortcut icon" type="image/x-icon" href="~/AdminLayout/images/logo_abc.jpg">
    <link href="~/Layout/css/styless.css" rel='stylesheet' type='text/css' />
    <script src="~/Scripts/js/Library/angular.min.js"></script>
    <script src="~/Scripts/js/Controllers/loginCtrl.js"></script>
    <link href="~/Layout/css/bootstrap.css" rel='stylesheet' type='text/css' />
    <link href="~/Layout/css/style.css" rel='stylesheet' type='text/css' />
    <script src="~/Layout/js/jquery-1.11.1.min.js"></script>
    <script src="~/Layout/js/modernizr.custom.js"></script>
    <script src="~/Layout/js/metisMenu.min.js"></script>
    <script src="~/Layout/js/custom.js"></script>
    <link href="~/Layout/css/custom.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <style>

        .hero-image {
            background-image: url("../Layout/images/kisan1.jpg");
            background-size: cover;
        }

        .widget-shadow {
            background-image: url("../Layout/images/kisan1.jpg");
            background-size: cover;
        }
    </style>
</head>
<body class="cbp-spmenu-push" ng-app="myApp" ng-controller="loginCtrl">
    <div class="main-content">
        <!-- main content start-->
        <div id="page-wrapper" class="hero-image" style="margin: 0 !important;">
            <div class="main-page login-page ">
                <h2 class="title1">Login</h2>
                <div class="widget-shadow">
                    <div class="login-body">
                        <form ng-submit="login(user)">
                            <input type="text" class="user" name="email" ng-model="user.UserName" placeholder="Enter User Name" required="" style="padding:10px 15px 10px 37px;width: 100%;">
                            <input type="password" name="password" ng-model="user.Password" class="lock" placeholder="password" required="" style="padding:10px 15px 10px 37px;width: 100%;">
                            <label style="color:red">
                                {{message}}
                            </label>
                            <input type="submit" name="Sign In" value="Sign In">
                        </form>
                    </div>
                </div>

            </div>
        </div>
        <!--footer-->
        <div class="footer">
            <p>&copy; 2020. All Rights Reserved | Design by </p>
        </div>
        <!--//footer-->
    </div>
    <!-- side nav js -->
    <script src='~/Layout/js/SidebarNav.min.js' type='text/javascript'></script>
    <script>
        $('.sidebar-menu').SidebarNav()
    </script>
    <!-- //side nav js -->
    <!-- Classie --><!-- for toggle left push menu script -->
    <script src="~/Layout/js/classie.js"></script>
    <script>
        var menuLeft = document.getElementById('cbp-spmenu-s1'),
            showLeftPush = document.getElementById('showLeftPush'),
            body = document.body;

        showLeftPush.onclick = function () {
            classie.toggle(this, 'active');
            classie.toggle(body, 'cbp-spmenu-push-toright');
            classie.toggle(menuLeft, 'cbp-spmenu-open');
            disableOther('showLeftPush');
        };

        function disableOther(button) {
            if (button !== 'showLeftPush') {
                classie.toggle(showLeftPush, 'disabled');
            }
        }
    </script>
    <!-- //Classie --><!-- //for toggle left push menu script -->
    <!--scrolling js-->
    <script src="~/Layout/js/jquery.nicescroll.js"></script>
    <script src="~/Layout/js/scripts.js"></script>
    <!--//scrolling js-->
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Layout/js/bootstrap.js"></script>
    <!-- //Bootstrap Core JavaScript -->
    <script type="text/javascript">
        $("[rel=tooltip]").tooltip();
        $(function () {
            $('.demo-cancel-click').click(function () { return false; });
        });
    </script>
</body>
</html>