@model IEnumerable<KisanKiDukan.Models.Domain.OrderStatu>
@{
    ViewBag.Title = "ManageOrderStatus";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="form-group">
    <h3>Shipment Status</h3>
</div>
<a href="/OrderStatus/Add" class="btn btn-info" style="margin-bottom:2%"><i class="fa fa-plus-square"></i> Add More</a>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Status</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.StatusName</td>
                <td><a href="/OrderStatus/UpdateOS?Id=@v.Id" class="btn btn-primary"><i class="fa fa-pencil-square-o"></i> Edit</a>
                    <a href="/OrderStatus/RemoveOS?Id=@v.Id" class="btn btn-danger"><i class="fa fa-trash-o"></i> Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
