@model KisanKiDukan.Models.ViewModels.VendorCityModel
@{
    ViewBag.Title = "AddVendorCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<h2>AddVendorCity</h2>*@

@using (Html.BeginForm("AddVendorCity", "StateCityLocManager", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    <div style="width:50%">
        <h4>Add City</h4>
        <div class="form-group">
            State List * @Html.DropDownListFor(a => a.State_Id, Model.StateLists, new { @class = "form-control", required = "required" })
            <span style="color:red">@Html.ValidationMessageFor(a => a.Id)</span>
        </div>

        <div class="form-group">
            City Name * @Html.TextBoxFor(a => a.CityList, new { @class = "form-control" })
            <span style="color:red">@Html.ValidationMessageFor(a => a.CityList)</span>
        </div>

        <div class="form-group">
            @if (TempData["msg"] != null)
            {
                <span style="color:red;">@TempData["msg"]</span>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-info" />
            <a class="btn btn-info" href="/StateCityLocManager/ShowVendorCity">Show All</a>
        </div>
    </div>
}





