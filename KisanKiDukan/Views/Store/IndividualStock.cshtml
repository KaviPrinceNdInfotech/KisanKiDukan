@model KisanKiDukan.Models.DTO.ProductSaleModel
@{
    ViewBag.Title = "Product Stock";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";    
}
<style>
    .row{
        margin-top:2%;
    }

    #main{
        width:95%;
        margin:auto;
    }

    input[type=number]::-webkit-inner-spin-button, 
input[type=number]::-webkit-outer-spin-button { 
  -webkit-appearance: none; 
  margin: 0; 
}
</style>
<div id="main">
    <div class="row">
        <div class="col-md-2">
            <a href="/Store/SingleProductStockEntry?productId=@Model.Product_Id" class="btn btn-info"><i class="fa fa-plus"></i>Add More</a>
        </div>
    </div>
    <h2 class="page-header">Stock for @Model.ProductName</h2>
        <div class="row">
            <div class="col-md-8">
                <table class="table table-bordered" id="myTable">
                    <thead>
                        <tr>                            
                            <th>Weight</th>                            
                            <th>Quantity</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Products != null && Model.Products.Count() > 0)
                        {
                            foreach (var item in Model.Products)
                            {
                                <tr>
                                    <td>
                                       <span>@item.Wheight</span> <span>@item.MetricName</span>  
                                    </td>
                                    <td>
                                        @item.Stock
                                    </td>                                  
                                </tr>
                            }
                        }
                        else
                        {
                            
                        }

                    </tbody>
                </table>
            </div>
        </div>
</div>
