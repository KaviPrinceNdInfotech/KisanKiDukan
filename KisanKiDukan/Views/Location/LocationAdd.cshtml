@model KisanKiDukan.Models.DTO.AddLocationDTO
@{
    ViewBag.Title = "LocationAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="form-group">
    @if (TempData["msg"] != null)
    {
        <span>@TempData["msg"]</span>
    }
</div>
<div style="width:50%">
    <h2 class="form-group">Delivery Location</h2>
    @using (Html.BeginForm())
    {
        <div class="form-group">
            Location Name*
            @Html.TextBoxFor(a => a.LocationName, new { @class = "form-control", required = "required" })
            <span>@Html.ValidationMessageFor(a => a.LocationName)</span>
        </div>
        <div class="form-group">
            Delivary Day
            @Html.TextBoxFor(a => a.TimeDay, new { @class = "form-control", required = "required" })
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-info" value="Submit" />
            <a class="btn btn-info" href="/Location/Locations">Show All</a>
        </div>
    }
</div>

