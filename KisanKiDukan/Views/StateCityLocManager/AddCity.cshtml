@model KisanKiDukan.Models.ViewModels.CityModel
@{
    ViewBag.Title = "AddCity";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@*<h2>AddCity</h2>*@
@using (Html.BeginForm("AddCity", "StateCityLocManager", FormMethod.Post, new { encType = "multipart/form-data" }))
{
<div style="width:50%">
    <h4>Add City</h4>
    <div class="form-group">
        Main Category * @Html.DropDownListFor(a => a.State_Id, Model.StateList, new { @class = "form-control", required = "required" })
        <span style="color:red">@Html.ValidationMessageFor(a => a.Id)</span>
    </div>

    <div class="form-group">
        Name * @Html.TextBoxFor(a => a.CityName, new { @class = "form-control" })
        <span style="color:red">@Html.ValidationMessageFor(a => a.CityName)</span>
    </div>
   
    <div class="form-group">
        @if (TempData["msg"] != null)
        {
            <span style="color:red;">@TempData["msg"]</span>
        }
    </div>
    <div class="form-group">
        <input type="submit" value="Submit" class="btn btn-info" />
        <a class="btn btn-info" href="/StateCityLocManager/ShowCity">Show All</a>
    </div>
</div>
}
