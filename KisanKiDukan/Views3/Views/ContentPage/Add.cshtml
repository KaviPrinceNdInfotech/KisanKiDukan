@model KisanKiDukan.Models.ViewModels.ContentPageModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@using KisanKiDukan.Utilities
<link href="~/Scripts/js/Library/editor.css" rel="stylesheet" />
<h1>About Us</h1>
<div style="margin-left: 20px;margin-top: 30px;width:95%;">
    <h4> @((Menu)Model.Menu_Id) </h4>
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(a => a.Id)
        @Html.HiddenFor(a => a.Menu_Id)
        <div class="form-group">
            @*Content
            @Html.TextAreaFor(a => a.Content, 6, 5, htmlAttributes: new { id = "editor" })*@
            Content* :<br />
            @Html.TextAreaFor(a => a.Content, 8, 7, htmlAttributes: new { id = "editor" })
            <span style="color:red">@Html.ValidationMessageFor(a => a.Content)</span>
        </div>
        <div class="form-group">
            @if (TempData["msg"] != null)
            {
                <span style="color:red">@TempData["msg"]</span>
            }
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    }
</div>
<script src="/Scripts/js/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    CKEDITOR.replace('editor');
</script>
