@model IEnumerable<KisanKiDukan.Models.Domain.VenderState>
@{
    ViewBag.Title = "ShowVendorState";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
@*<h2>ShowVendorState</h2>*@

<div style="width:60%">
    <h4>States</h4>
    <a href="/StateCityLocManager/AddVendorState" class="btn btn-primary">Add more</a>
    <table class="table table-striped">
        <tr>
            <th>State Name</th>
            <th>Action</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StateList</td>
                <td>
                    @*<a href="/Category/Edit?id=@item.Id" class="btn btn-info">Edit</a>*@
                    @*<a href="/StateCityLocManager/DeleteState?id=@item.Id" class="btn btn-danger">Delete</a>*@
                    @if (User.IsInRole("Vendor"))
                    {
                        <a href="/StateCityLocManager/DeleteVendorState?id=@item.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </table>
</div>


