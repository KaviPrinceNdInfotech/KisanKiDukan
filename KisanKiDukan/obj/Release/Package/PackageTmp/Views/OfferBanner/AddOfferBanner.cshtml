@model KisanKiDukan.Models.DTO.BannerAddDTO
@{
    ViewBag.Title = "AddOfferBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="form-group">
    @if (TempData["msg"] != null)
    {
        <span>@TempData["msg"]</span>
    }
</div>
@using (Html.BeginForm("AddOfferBanner", "OfferBanner", FormMethod.Post, new { encType = "multipart/form-data" }))
{
    <div style="width:50%;margin:auto">     
        <div class="form-group">
            OfferBanner *
            @Html.TextBoxFor(a => a.ImageFile, new { type = "file", @class = "form-control", required = "required" })
        </div> 
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-info" />
            <a class="btn btn-info" href="/OfferBanner/ShowBanner">Show All</a>
        </div>
    </div>
}