@model KisanKiDukan.Models.ViewModels.BannerShowModel
@{
    ViewBag.Title = "ShowBanner";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    int sn = 0;
}
<div class="form-group"><a href="/OfferBanner/AddOfferBanner" class="btn btn-primary">Add more</a></div>
<div style="width:100%">
    <h4>Offer Banner</h4>
    @if (Model.Banner.Count() > 0)
    {
        <table class="table table-striped">
            <tr>
                <th>Sr. No.</th>
                <th>Image</th>
                
                <th>Action</th>
            </tr>
            @foreach (var item in Model.Banner)
            {
                sn++;
                <tr>
                    <td>@sn</td>
                    <td>
                        @if (string.IsNullOrEmpty(item.BannerPath))
                        {
                            <span>No image</span>
                        }
                        else
                        {
                            <img style="width:250px;height:150px" src="/Images/@item.BannerPath">
                        }
                    </td>
                    <td>
                        <a href="/OfferBanner/Delete?id=@item.Id" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </table>
        <ul class="pagination">
            @for (int i = 1; i <= Model.NumberOfPages; i++)
            {
                if (Model.Page == i)
                {
                    <li class="active"><a href="/OfferBanner/ShowBanner?page=@i">@i</a></li>
                }
                else
                {
                    <li><a href="/OfferBanner/ShowBanner?page=@i">@i</a></li>
                }
            }
        </ul>
    }
    else
    {
        <h4>No records found</h4>
    }
</div>
