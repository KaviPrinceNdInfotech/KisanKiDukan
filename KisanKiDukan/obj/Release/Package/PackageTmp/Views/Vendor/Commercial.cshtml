@model KisanKiDukan.Models.DTO.VendorDTO

@{
    ViewBag.Title = "Commercial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Commercial</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>VendorDTO</h4>
        <hr />
        <br/><br/><br/><br/>
        <div class="row" style="height:450px">
            <div class="col-md-2"></div>
            <div class="col-md-8">
                <div class="row" style="padding: 10px 56px; box-shadow: 0 0 10px; vertical-align: middle; border-radius: 5px 5px 5px 5px; ">

                    <div class="col-md-6">
                        @Html.HiddenFor(model => model.Id)
                        @Html.LabelFor(model => model.Commission, htmlAttributes: new { @class = "control-label " })
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.Commission, new { htmlAttributes = new { @class = "form-control" , @type = "Text" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.PaymentGatewayCharge, htmlAttributes: new { @class = "control-label " })
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.PaymentGatewayCharge, new { htmlAttributes = new { @class = "form-control", @type = "Text" } })
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        @Html.LabelFor(model => model.DeliveryCharge, htmlAttributes: new { @class = "control-label " })
                        <div class="form-group">

                            <div class="col-md-10">
                                @Html.EditorFor(model => model.DeliveryCharge, new { htmlAttributes = new { @class = "form-control" , @type = "Text" } })
                            </div>
                        </div>
                    </div>


                    <div class="col-md-6">
                        <div class="form-group  text-center">
                            <div class="col-md-offset-2 col-md-10">
                                <br />
                                <input type="submit" value="Save" class="btn btn-default  btn btn-success" />
                            </div>
                        </div>
                    </div>

                </div>
            </div>
            <div class="col-md-2"></div>
        </div>
    </div>
}

